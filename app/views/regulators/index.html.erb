<h1>Listing regulators</h1>
<br />
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Domain</th>
    <th class="number">Number</th>
    <th></th>
  </tr>

<% @regulators.each do |regulator| %>
  <tr>
    <td><%= regulator.short_name %></td>
    <td><%= regulator.domain %></td>
    <td class="number"><%= regulator.registration_count %></td>
    <td>
      <%= link_to 'Edit', edit_regulator_path(regulator), :class => "btn btn-mini" %>
    </td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'New Regulator', new_regulator_path, :class => "btn btn-small" %>
