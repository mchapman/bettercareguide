<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Line1</th>
    <th>Line2</th>
    <th>Line3</th>
    <th>City</th>
    <th>State</th>
    <th>Postal zip code</th>
    <th>Lat</th>
    <th>Lng</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.line1 %></td>
    <td><%= address.line2 %></td>
    <td><%= address.line3 %></td>
    <td><%= address.city %></td>
    <td><%= address.state %></td>
    <td><%= address.postal_zip_code %></td>
    <td><%= address.lat %></td>
    <td><%= address.lng %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address,  :data => { :confirm => 'Are you sure?' }, :method => :delete %></td>
  </tr>
<% end %>
</table>

